{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["./lib/**/*"]
}
